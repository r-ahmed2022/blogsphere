<section class="container">
    <h3>Comments</h3>
    <br>
    <button class="btn btn-danger">
        <%= link_to 'Back to post', user_post_path(@post.author, @post), style: 'color: black; text-decoration: none;' %>
    </button>
    <ul class="list">
        <% @post.comments.each do |comment| %>
            <li> <%= comment.author.name %>: <%= comment.text %> </li>
        <% end %>
    </ul>
</section>