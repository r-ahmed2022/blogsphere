
<div class="container d-flex flex-column align-items-stretch">

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: 'user_input' %>
    </div>
    <br>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: 'user_input' %>
    </div>
    <br>
    <% if devise_mapping.rememberable? %>
      <div class="field user_input">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
