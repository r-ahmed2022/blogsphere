
<div class="container mt-3" id="user-list">
<% @users.each do |user| %>
<div class="card text-center my-3 w-100" id="card">
  <div class="card-header">
  <%= user.id %>
  </div>
  <div class="card-body d-flex justify-content-start align-items-start">
            <div class="user-photo">
               <!-- <%= user.photo %> -->
               <img src=<%="#{user.photo}"%> />
            </div>
            <div class="ms-4 ps-4">
                <%= link_to user.name, user_path(user), class:'btn btn-success' %>
           </div>
  </div>
  <div class="card-footer text-muted d-flex justify-content-end">
    <b>Number of posts:- </b> &nbsp; <%= user.postscounter %>
  </div>
</div>
<% end %>
 </div>