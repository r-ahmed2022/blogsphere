<div class="container mt-3">
<div class="card text-center my-3">
  <div class="card-header">
  </div>
  <div class="card-body d-flex justify-content-start align-items-start">
            <div class="user-photo">
              <!--  <%= @user.photo %> --> 
                 <img src=<%="#{@user.photo}"%> />
            </div>
            <div class="ms-4 ps-4">
                <h1> <%= @user.name %></h1>
                <%= link_to 'New Post', new_user_post_path(@user), class: 'btn btn-success' %>


           </div>
  </div>
  <div class="card-footer text-muted d-flex justify-content-end">
    <b>Number of posts:- </b> &nbsp; <%= @user.postscounter %>
  </div>


  <!--  start of posts -->
 <% @posts.each do |post| %>

  <div class="card text-center my-3 ">
  <div class="card-header d-flex justify-content-between">
     <div><b>Title:&nbsp;&nbsp;</b> <%= post.title %>&nbsp;</div> 
     <%= link_to "#{post.title}", user_post_path(@user,post) , class: 'link_to_post' %>

  </div>
  <div class="card-body d-flex flex-column justify-content-around align-items-center">
           
            <div class="user_name-div">
              
             <%= post.text %>

           </div>
           <div class="username-comments-section d-flex align-items-start flex-column align-self-start ps-4 ">
             <% post.recent_comments.each do |comment| %>
               <small><%= comment.author.name %>: <%= comment.text %></small><br>
             <% end %>
           
           </div>
  </div>
  <div class="card-footer text-muted d-flex justify-content-end">

    <b>Comments:- </b><span class="text-success"> &nbsp; <u>  <%= post.commentscounter || 0 %></u></span>&nbsp;&nbsp;
    <b>Likes:- </b> &nbsp;<span class=" no-likes text-danger"><u> <%= post.likescounter || 0 %></u></span>
  </div>
</div>
<% end %>

 <!--  end of posts -->

</div>



</div>