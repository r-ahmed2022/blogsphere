<div class="container d-flex flex-column align-items-center">
<div class="d-flex">
   <div class="d-flex">
     <p> Title: <%= @post.title %>&nbsp;&nbsp;by:-&nbsp;&nbsp;&nbsp;&nbsp;</p>
     <span><%= @post.author.name%></span>&nbsp;&nbsp;&nbsp;&nbsp;
   </div>
    <div class="d-flex">
     <span><b>Comments:-</b><%= @post.commentscounter %></span>&nbsp;&nbsp;
     <span><b>Likes:-</b><%= @post.likescounter %></span>
  </div>
</div>
   <p>Text, <%= @post.text %></p>
    <div class="d-flex mx-3 align-items-center">
                <%= link_to 'Comment', new_user_post_comment_path(@post.author, @post), class: ' comment-like btn btn-outline-success' %>
                <%= render 'likes/like' %>
                <%= link_to 'Edit Post', edit_user_post_path(@user, @post.id), class: 'btn btn-outline-info' %>
                <%= button_to 'Delete Post', method: :delete, class: 'btn btn-outline-danger' %>

    </div>
    <%= link_to 'Home Page', '/' %>
    <%= link_to 'Back to posts', user_posts_path(@user) %>
    <div class="d-flex flex-column align-self-start mt-4">
       <% @post.comments.each do |comment|%>
          <span><%= comment.author.name %>:- &nbsp;<%= comment.text %></span>
       <% end %>
    </div>

  </div>